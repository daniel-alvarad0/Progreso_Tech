<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".CrearRecursoActivity"> <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Crear Nuevo Recurso" android:textSize="24sp"
    android:textStyle="bold"
    android:gravity="center"
    android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editTextTitulo" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Título del Recurso"
        android:inputType="textCapSentences" />

    <EditText
        android:id="@+id/editTextDescripcion" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:lines="3"
        android:gravity="top"/>

    <EditText
        android:id="@+id/editTextTipo" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo (Ej: Video, Artículo)"
        android:inputType="textCapWords" />

    <EditText
        android:id="@+id/editTextEnlace" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enlace / URL"
        android:inputType="textUri" />

    <EditText
        android:id="@+id/editTextImagen" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="URL de Imagen (Opcional)"
        android:inputType="textUri" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Guardar Recurso" /> </LinearLayout>